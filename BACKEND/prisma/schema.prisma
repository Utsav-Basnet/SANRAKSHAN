datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("USER")
  createdAt DateTime @default(now())

  // ðŸ‘‡ THIS is the missing opposite relation
  sosEvents SOS[]
}

model Alert {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  location    String
  severity    String
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model SOS {
  id        Int      @id @default(autoincrement())
  userId    Int
  location  String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
